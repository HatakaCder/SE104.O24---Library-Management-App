<Window x:Class="QuanLyThuVien.View.AddReader"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyThuVien.View"
      mc:Ignorable="d" 
        Height="700" Width="500"
    Background="White"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
xmlns:uc="clr-namespace:QuanLyThuVien.UserControlQLTV"
TextElement.Foreground="{DynamicResource MaterialDesignBody}"
TextElement.FontWeight="Regular"
TextElement.FontSize="13"
TextOptions.TextFormattingMode="Ideal"
TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="560*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Top" Height="733" Grid.ColumnSpan="4" Margin="0,50,0,0">
            <TextBlock Text="Thêm độc giả" Foreground="#3AB19B" Style="{StaticResource TitleText}"
                       />

            <TextBox
        Margin="0 5 0 5"
            Width="300"
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Họ tên"
                Text="{Binding Path=CurrentReader.HoTen}"
            AcceptsReturn="True"                                
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

            <Grid Grid.Row="2" Width="300" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <RadioButton Style="{StaticResource RadioButton14}" Grid.Column="0" GroupName="Gender" IsChecked="{Binding NamChecked, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center">Nam</RadioButton>
                <RadioButton Style="{StaticResource RadioButton14}" Grid.Column="1" GroupName="Gender" IsChecked="{Binding NuChecked, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center">Nữ</RadioButton>
            </Grid>


            <DatePicker
      Margin="0 5 0 5"
      Width="300"
      materialDesign:HintAssist.Hint="Ngày sinh"
      Style="{StaticResource MaterialDesignOutlinedDatePicker}" SelectedDate="{Binding Path=CurrentReader.NgaySinh}"  />

            <TextBox
Margin="0 5 0 5"
    Width="300"
    VerticalAlignment="Top"
    materialDesign:HintAssist.Hint="Địa chỉ"
                Text="{Binding Path=CurrentReader.DiaChi}"
    AcceptsReturn="True"                                
    Style="{StaticResource MaterialDesignOutlinedTextBox}"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto" />

            <TextBox
Margin="0 5 0 5"
    Width="300"
    VerticalAlignment="Top"
    materialDesign:HintAssist.Hint="Địa chỉ email"
                Text="{Binding Path=CurrentReader.Email}"
    AcceptsReturn="True"                                
    Style="{StaticResource MaterialDesignOutlinedTextBox}"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto" />

            <TextBox
Margin="0 5 0 5"
        Width="300"
        VerticalAlignment="Top"
        materialDesign:HintAssist.Hint="Số điện thoại"
        AcceptsReturn="True"  
        Text="{Binding Path=CurrentReader.SoDT}"
        Style="{StaticResource MaterialDesignOutlinedTextBox}"
        TextWrapping="Wrap"
        VerticalScrollBarVisibility="Auto" />

            <Button Content="Thêm" Style="{StaticResource mainButton}" Command="{Binding Path=SaveCommand}" />

        </StackPanel>
    </Grid>
</Window>